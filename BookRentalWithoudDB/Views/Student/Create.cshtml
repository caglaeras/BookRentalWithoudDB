@model Student

<h2>@(Model.ID == 0 ? "Create Student" : "Edit Student")</h2>

<form method="post" asp-action="Create" asp-controller="Student">
    <input type="hidden" asp-for="ID" />

    <table>
        <tr>
            <td width="200">ID</td>
            <td><input asp-for="ID" /></td>
        </tr>
        <tr>
            <td width="200">Name</td>
            <td><input asp-for="Name" /></td>
        </tr>
        <tr>
            <td width="200">Surname</td>
            <td><input asp-for="Surname" /></td>
        </tr>
        <tr>
            <td width="200">Birth Date</td>
            <td><input asp-for="BirthDate" /></td>
        </tr>
        <tr>
            <td> <input type="submit" value="@(Model.ID == 0 ? "Create" : "Save Changes")" class="btn btn-success" /></td>
            <td> </td>
        </tr>
    </table>

</form>
<a asp-controller="Student" asp-action="Index" class="btn btn-secondary">Cancel</a>
